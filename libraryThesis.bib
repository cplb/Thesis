eprint = {0310125},
file = {:C\:/Users/cplb2/Documents/Cambridge/PhD/Papers/Barack, Cutler - 2004 - LISA capture sources Approximate waveforms, signal-to-noise ratios, and parameter estimation accuracy.pdf:pdf},
issn = {1550-7998},
journal = {Physical Review D},
keywords = {Astrophysics,General Relativity and Quantum Cosmology},
month = apr,
number = {8},
pages = {082005(24)},
primaryClass = {gr-qc},
title = {{LISA capture sources: Approximate waveforms, signal-to-noise ratios, and parameter estimation accuracy}},
