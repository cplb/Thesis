issn = {1433-8351},
journal = {Living Reviews in Relativity},
keywords = {Curved spacetime,Electromagnetic field,Equations of motion,Gravitation,Point particles,Radiation reaction,Scalar field,Self force},
language = {en},
month = jun,
number = {6},
primaryClass = {gr-qc},
title = {{The Motion of Point Particles in Curved Spacetime}},
url = {http://adsabs.harvard.edu/abs/2004LRR.....7....6P http://www.livingreviews.org/lrr-2004-6},
