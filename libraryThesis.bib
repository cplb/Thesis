keywords = {Black holes,Experimental tests of gravitational theories,Gravitational waves: theory,Neutron stars},
month = feb,
number = {4},
pages = {2061--2068},
primaryClass = {gr-qc},
title = {{Bounding the mass of the graviton using gravitational-wave observations of inspiralling compact binaries}},
