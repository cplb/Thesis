eprint = {1103.0115},
issn = {00358711},
journal = {Monthly Notices of the Royal Astronomical Society},
month = jul,
number = {4},
pages = {3251--3264},
title = {{Gravitational wave astronomy of single sources with a pulsar timing array}},
url = {http://arxiv.org/abs/1103.0115 http://doi.wiley.com/10.1111/j.1365-2966.2011.18622.x},
volume = {414},
