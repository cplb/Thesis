journal = {Physical Review D},
month = mar,
number = {6},
pages = {064037(15)},
title = {{Mismodeling in gravitational-wave astronomy: The trouble with templates}},
url = {http://arxiv.org/abs/1311.4898 http://link.aps.org/doi/10.1103/PhysRevD.89.064037},
volume = {89},
year = {2014}
}
@article{Henttunen2011,
