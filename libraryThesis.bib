month = jul,
number = {2},
pages = {024032(41)},
title = {{Observable signatures of extreme mass-ratio inspiral black hole binaries embedded in thin accretion disks}},
url = {http://arxiv.org/abs/1104.2322 http://link.aps.org/doi/10.1103/PhysRevD.84.024032},
