title = {{Spin evolution of supermassive black holes and galactic nuclei}},
url = {http://arxiv.org/abs/1208.6274 http://link.aps.org/doi/10.1103/PhysRevD.86.102002},
volume = {86},
year = {2012}
}
@article{Price2013,
