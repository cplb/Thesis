arxivId = {1112.3960},
author = {Famaey, Beno{\^i}t and McGaugh, Stacy S.},
doi = {10.12942/lrr-2012-10},
eprint = {1112.3960},
issn = {1433-8351},
journal = {Living Reviews in Relativity},
keywords = {Newtonian limit,astronomical observations,astrophysics,cosmology,equations of motion,extragalactic astronomy,fundamental physics,theories of gravity},
language = {en},
month = dec,
number = {10},
title = {{Modified Newtonian Dynamics (MOND): Observational Phenomenology and Relativistic Extensions}},
url = {http://adsabs.harvard.edu/abs/2012LRR....15...10F},
volume = {15},
year = {2012}
}
