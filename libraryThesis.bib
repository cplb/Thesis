doi = {10.1103/PhysRevD.52.5707},
issn = {0556-2821},
journal = {Physical Review D},
month = nov,
number = {10},
pages = {5707--5718},
publisher = {American Physical Society},
shorttitle = {Phys. Rev. D},
title = {{Gravitational waves from the inspiral of a compact object into a massive, axisymmetric body with arbitrary multipole moments}},
